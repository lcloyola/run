.container-fluid
  .row-fluid
    %h1 Training Templates
    %h3= link_to 'Create New', '/templates/new'
    %br
    #athletebox.span10
      - @categories.each do |category|
        %h2 
          = category.name
          = link_to '(Edit)', edit_category_path(category)
        %table{:id => "sortable", :class => "zebra-striped tablesorter"}
          %tr
            %th Name
            %th Unit
            %th Sets
            %th Repetitions per Set
            %th Interval per Set (mins)
            %th Category
            %th{:colspan => 3} Action
          %tbody
            - category.template.each do |template|
              %tr
                %td= template.name
                %td= template.unit
                %td= template.sets
                %td= template.reps
                %td= template.interval
                %td= template.category.name
                %td= link_to 'Show', template
                %td= link_to 'Edit', edit_template_path(template)
                %td= link_to 'Destroy', template, :confirm => 'Are you sure?', :method => :delete
#a{:style=>"clear:both"}
           
   

