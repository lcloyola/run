%p#notice= notice

%h2
  %b= @category.name
%h5
  = link_to 'Edit', edit_category_path(@category)
  \|
  = link_to 'View All', categories_path
%table{:id => "sortable", :class => "zebra-striped tablesorter"}
  %tr
    %th Name
    %th Unit
    %th Sets
    %th Repetitions per Set
    %th Interval per Set (mins)
    %th Category
    %th{:colspan => 3} Action
  %tbody
    - @category.template.each do |template|
      %tr
        %td= template.name
        %td= template.unit
        %td= template.sets
        %td= template.reps
        %td= template.interval
        %td= template.category.name
        %td= link_to 'Show', template
        %td= link_to 'Edit', edit_template_path(template)
        %td= link_to 'Destroy', template, :confirm => 'Are you sure?', :method => :delete
