#subnav
  %ul.subtab
    %li#current.active= link_to 'Create Athlete', 'create_athlete'
    %li= link_to 'Create Team', 'create_team'
.brownbox
  =form_for(@athlete, :as => 'user', :url => 'create_athlete', :html => {:class=>"form-stacked"}) do |f|
    -if @athlete.errors.any?
      #error_explanation
        %h2= "#{pluralize(@athlete.errors.count, "error")} prohibited this batch from being saved:"
        - @athlete.errors.full_messages.each do |msg|
          %ul
            %li= msg
    %h2 Create Athlete
    %hr
    .field
      = f.label :email
      = f.email_field :email
    .field
      =f.label :password
      = f.password_field :password
    .field
      = f.label :password_confirmation
      = f.password_field :password_confirmation
    %br
    .actions
      = f.submit "Add Athlete", :class=> 'button-gray'

#athletebox
  %table
    %thead
    %tbody
#a{:style=>"clear:both"}
