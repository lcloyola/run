%h1= @user.fullname
%h2= @user.email
- if @user.id == current_user.id
  %h3= link_to "edit my profile", "/users/edit"
%br
%p= @user.about
- if @user.is_coach
  %b My Athletes
  %ul
    - @user.my_athletes.each do |a|
      %li= a.email
  %b My Teams
  %ul
    - @user.my_team.each do |t|
      %li= t.name
- if @user.is_athlete
  %b My Teams
  %ul
    - @user.membership.each do |m|
      %li= m.team.name
