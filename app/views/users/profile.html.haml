%h1= @user.fullname
%h2= @user.email
- if @user.id == current_user.id
  = link_to "Edit my profile", "/users/edit"
  %br
%br
.container-fluid
  .row-fluid
    .span6
      -if @user.photo.exists? then
        = image_tag @user.photo.url(:medium)
      %p= @user.about
      - if @user.is_athlete && !@user.tsessions.empty?
        - @s = pie_chart_athlete(@user.id)
        = image_tag @s.to_url
    .span4
      - if @user.is_coach
        %b My Athletes
        %ul
          - @user.my_athletes.each do |a|
            %li= a.email
        %b My Teams
        %ul
          - @user.my_team.each do |t|
            %li= t.name
      - if @user.is_athlete && !@user.teams.empty?
        - if @user.is_coach
          %b My Teams (as athlete)
        - else
          %b My Teams
        %ul
          - @user.membership.each do |m|
            %li= m.team.name
	