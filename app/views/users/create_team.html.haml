#subnav
  %ul.subtab
    %li= link_to 'Create Athlete', 'create_athlete'
    %li#current.active= link_to 'Create Team', 'create_team'
.brownbox
  =form_for(@athlete, :as => 'user', :url => 'create_athlete', :html => {:class=>"form-stacked"}) do |f|
    -if @athlete.errors.any?
      #error_explanation
        %h2= "#{pluralize(@athlete.errors.count, "error")} prohibited this batch from being saved:"
        - @athlete.errors.full_messages.each do |msg|
          %ul
            %li= msg
    %h2 Create Athlete
    %hr
    .field
      = f.label :name
      = f.text_field :email
    .actions
      = f.submit "Add Team", :class=> 'button-gray'

#athletebox
  %table{:id => "sortable", :class => "zebra-striped tablesorter"}
    %tr
      %th Year
      %th Remarks
      %th Students
      %th{:colspan => 3} Action
    %tbody
      %tr
        %td batch.year
        %td batch.remarks
        %td batch.students.count
        %td link_to 'New Student', new_batch_student_url(batch)
        %td link_to 'Show', batch_students_path(batch)
        %td link_to 'Edit', edit_batch_path(batch)
#a{:style=>"clear:both"}
