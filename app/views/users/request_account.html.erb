<div class="center">
<%= form_for(@user, :as => User, :url => registration_path(User), :html => {:class=>"form-stacked"}) do |f| %>
  <%-if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= "#{pluralize(@schoolyear.errors.count, "error")} prohibited this schoolyear from being saved:" %>
      <ul>
