- @myathletes = current_user.my_athletes
- if !@myathletes.nil?
  %table{:id => "sortable", :class => "zebra-striped tablesorter"}
    %tr
      %th Last
      %th First
      %th Teams
      %th{:colspan => 3} Action
   
    %tbody
      - @myathletes.each do |athlete|
        %tr
          %td= athlete.last
          %td= athlete.first
          %td= athlete.email
          %td= link_to 'Profile', '#'
          %td= link_to 'Performance', '#'            
