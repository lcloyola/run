%html{:xmlns => "http://www.w3.org/1999/xhtml", "xml:lang" => "en", :lang => "en"}
  %head
    %meta{ 'http-equiv' => 'Content-Type', :content => 'text/html' }
    %meta{ :name => 'robots', :content => 'index, follow' }
    %link{ :href => 'http://fonts.googleapis.com/css?family=PT+Sans', :rel => 'stylesheet', :type => 'text/css' }
    %title Run

    = stylesheet_link_tag "application", media: "screen"
    = javascript_include_tag "application"
    = csrf_meta_tags

  %body
    #wrap.container-fluid
      .header
        .header-inner
          = link_to image_tag('logos.png'), root_path
          .dash
            = image_tag('a.png', :style => 'width: 40px; height: 40px; vertical-align: middle;')
            &nbsp;
            = link_to current_user.email, edit_user_registration_path
            = link_to '| Logout', destroy_user_session_path, :method => :delete
      #inner-wrap.container_16
        #topnav.grid_16
          #navigation
            %ul.tab
              - if current_user.coach
                %li.active#current= link_to "Training Management"
                %li= link_to "Athlete Management", '/users/create_athlete'
                %li= link_to "Performance"
                %li= link_to "Profile"
              - else
                %li= link_to "New Trainings"
                %li= link_to "Performance"

        #main.grid_16
          #content
            = yield

    %footer.footer
      .center &copy; #{Time.now.year} Cola, Loyola, Pineda, Santos

